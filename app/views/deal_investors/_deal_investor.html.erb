<tr id="<%= dom_id deal_investor %>">
    <td>
        <% if deal_investor.entity_id == current_user.entity_id %>
        <%= link_to deal_investor.deal_name, deal_investor.deal %>
        <% else %>
        <%= deal_investor.deal_name %>
        <% end %>
        
    </td>
    <td>
        <%= l deal_investor.deal.start_date if deal_investor.deal.start_date  %>
    </td>
    <td>
        <%= current_user.entity_id == deal_investor.entity_id ? 
            link_to(deal_investor.investor_name, deal_investor) : deal_investor.investor_name %>
        <div>
            <span class="badge <%= status_badge(deal_investor) %>">
                <%= deal_investor.status %>
            </span>            
        </div>
    </td>
    <td>
        <%= deal_investor.entity.name %>
    </td>
    <td>
        <%= money_to_currency deal_investor.pre_money_valuation, params %>
    </td>
    <td>
        <%= money_to_currency deal_investor.primary_amount, params %>
    </td>
    <td>
        <%= money_to_currency deal_investor.secondary_investment, params %>
    </td>
    <td>
        <%= deal_investor.company_advisor %>
    </td>
    <td>
        <%= deal_investor.investor_advisor %>
    </td>
    <td class="">
        <% if current_user.entity_id == deal_investor.investor_entity_id %>
            <% if deal_investor.unread_messages_investor > 0 %>
            <span class="badge <%= message_badge(deal_investor.unread_messages_investor) %>">
                <%= link_to "Unread: #{deal_investor.unread_messages_investor}", messages_path(deal_investor_id: deal_investor.id) %>
            </span>
            <% end %>
            <% if deal_investor.todays_messages_investor > 0 %>
            <span class="badge <%= message_badge(deal_investor.todays_messages_investor) %>">
                <%= link_to "Todays: #{deal_investor.todays_messages_investor}", messages_path(deal_investor_id: deal_investor.id) %>                
            </span>
            <% end %>
        <% else %> 
            <% if deal_investor.unread_messages_investee > 0 %>
            <span class="badge <%= message_badge(deal_investor.unread_messages_investee) %>">
                <%= link_to "Unread: #{deal_investor.unread_messages_investee}", messages_path(deal_investor_id: deal_investor.id) %>                
            </span>
            <% end %>
            <% if deal_investor.todays_messages_investee > 0 %>
            <span class="badge <%= message_badge(deal_investor.todays_messages_investee) %>">
                <%= link_to "Todays: #{deal_investor.todays_messages_investee}", messages_path(deal_investor_id: deal_investor.id) %>                
            </span>  
            <% end %> 
        <% end %>
    </td>

    <td>
        <%= link_to "Show", deal_investor, class: "btn btn-primary" %>
    </td>
</tr>