<div class="card-header card-header-day d-flex justify-content-between align-items-center">
  <%= link_to events_path(owner_id: @owner&.id, owner_type: @owner&.class.to_s, day: (@current_day - 1.day).strftime('%Y-%m-%d'), view: @view), data: { turbo: false } do %>
    <i class="ti ti-arrow-left"></i>
  <% end %>
  <div class="card-title m-0 text-center">
    <span><%= owner %></span>
    <h5><%= @current_day.strftime('%B %d, %Y') %></h5>
  </div>
  <%= link_to events_path(owner_id: @owner&.id, owner_type: @owner&.class.to_s, day: (@current_day + 1.day).strftime('%Y-%m-%d'), view: @view), data: { turbo: false } do %>
    <i class="ti ti-arrow-right"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-day-calendar mb-0">
    <thead>
      <tr class="text-center bg-light">
        <th class="time-slot-column-day"></th>
        <th>Events</th>
      </tr>
    </thead>
    <tbody>
      <% (0..23).each do |hour| %>
        <tr>
          <td class="time-slot-column-day text-center">
            <%= "#{hour % 12 == 0 ? 12 : hour % 12}:00 #{hour < 12 ? 'AM' : 'PM'}" %>
          </td>
          <td class="events-cell-day">
            <% events_in_hour = @events_by_hour[hour] || [] %>
            <%= link_to new_event_path(owner_type: @owner.class.name, owner_id: @owner.id, date: @current_day, time_slot: hour), class: "d-block h-100 w-100 position-absolute top-0 start-0", style: "z-index: 1;", data: { turbo: false } do %>
            <% end %>
            <div class="events-list-day">
              <% events_in_hour.each do |event| %>
                <div class="event-item-day">
                  <%= link_to event_path(event), class: 'event-item', data: { turbo: false } do %>
                    <%= event.title %> - <%= event.start_time.strftime('%I:%M %p') %>
                  <% end %>
                </div>
              <% end %>
              <% if events_in_hour.empty? %>
                <span class="no-events-day"></span>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
