              <polyline points="14 2 14 8 20 8"></polyline>
            </svg>
            Download PDF
          </a>
          <a href="<%= export_docx_ai_portfolio_report_path(@report) %>" class="ai-export-item">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
            </svg>
            Download Word
          </a>
        </div>
      </div>

      <%= link_to ai_portfolio_report_path(@report), class: "ai-btn ai-btn-back" do %>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Sections
      <% end %>

      <span id="report-status-badge" class="ai-status-badge <%= @report.status == 'finalized' ? 'finalized' : 'draft' %>">
        <%= @report.status&.humanize || 'Draft' %>
      </span>
    </div>
  </div>

  <div class="ai-collated-workspace">
    <!-- Sections Sidebar (Fixed - doesn't scroll with content) -->
    <div class="ai-sections-sidebar">
      <div class="ai-sidebar-header">
        <span class="ai-sidebar-label">SECTIONS</span>
      </div>
      <div class="ai-sidebar-list">
        <% @sections.each_with_index do |section, index| %>
          <a href="javascript:void(0)"
             class="ai-sidebar-item"
             data-section-id="section-<%= section.id %>"
             onclick="scrollToSection('section-<%= section.id %>')">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
            </svg>
            <span class="ai-sidebar-item-text"><%= section.section_type %></span>
          </a>
        <% end %>
      </div>
    </div>

    <!-- Main Content Editor -->
    <div class="ai-collated-editor" id="collated-editor">
      <div class="ai-editor-wrapper">
        <div id="collated-content" contenteditable="true" class="ai-collated-content">
          <%= @collated_content.html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const reportId = <%= @report.id %>;

  // Toggle export dropdown
  function toggleExportMenu() {
    const menu = document.getElementById('export-menu');
    menu.classList.toggle('show');
  }

  // Close dropdown when clicking outside
  document.addEventListener('click', function(e) {
    const dropdown = document.querySelector('.ai-export-dropdown');
    if (!dropdown.contains(e.target)) {
      document.getElementById('export-menu').classList.remove('show');
    }
  });

  // Scroll to section - scrolls only the editor pane, not the sidebar
  function scrollToSection(sectionId) {
    const editorPane = document.getElementById('collated-editor');
    const targetElement = document.getElementById(sectionId);

    if (targetElement && editorPane) {
      // Calculate the position of the target relative to the editor pane
      const editorRect = editorPane.getBoundingClientRect();
      const targetRect = targetElement.getBoundingClientRect();
      const scrollTop = editorPane.scrollTop + (targetRect.top - editorRect.top) - 20;

      // Scroll the editor pane
      editorPane.scrollTo({
        top: scrollTop,
        behavior: 'smooth'
      });

      // Update active state in sidebar
      document.querySelectorAll('.ai-sidebar-item').forEach(item => {
        item.classList.remove('active');
      });
      document.querySelector(`[data-section-id="${sectionId}"]`)?.classList.add('active');
    }
  }

  // Save collated report
  async function saveCollatedReport() {
    const content = document.getElementById('collated-content').innerHTML;
    const saveStatus = document.getElementById('save-status');
    const saveBtn = document.querySelector('.ai-btn-primary');

    // Show saving state
    saveStatus.innerHTML = '<span class="ai-status-saving">Saving...</span>';
    saveBtn.disabled = true;

    try {
      const response = await fetch('/ai_portfolio_reports/' + reportId + '/save_collated_report', {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({ content: content })
      });

      const data = await response.json();

      if (data.success) {
        saveStatus.innerHTML = '<span class="ai-status-success"><svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg> Saved at ' + new Date().toLocaleTimeString() + '</span>';

        // Update status badge to Finalized
        const statusBadge = document.getElementById('report-status-badge');
        if (statusBadge) {
          statusBadge.className = 'ai-status-badge finalized';
          statusBadge.textContent = 'Finalized';
        }
      } else {
        saveStatus.innerHTML = '<span class="ai-status-error"><svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg> Failed to save</span>';
        alert('Error: ' + data.error);
      }
    } catch (error) {
      console.error(error);
      saveStatus.innerHTML = '<span class="ai-status-error"><svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg> Connection error</span>';
    } finally {
      saveBtn.disabled = false;
    }
  }

  // Light pastel color palette for charts
  const PASTEL_COLORS = [
    '#93C5FD', '#A5B4FC', '#F9A8D4', '#FCD34D', '#6EE7B7',
    '#FDBA74', '#C4B5FD', '#FCA5A5', '#7DD3FC', '#67E8F9',
  ];

  function applyLightColors(data, chartType) {
    if (!data.datasets) return data;

    data.datasets.forEach((dataset, idx) => {
      const color = PASTEL_COLORS[idx % PASTEL_COLORS.length];

      if (chartType === 'pie' || chartType === 'doughnut') {
        if (!dataset.backgroundColor || isDarkColor(dataset.backgroundColor)) {
          dataset.backgroundColor = PASTEL_COLORS.slice(0, data.labels?.length || 6);
        }
      } else if (chartType === 'line') {
        if (!dataset.borderColor || isDarkColor(dataset.borderColor)) {
          dataset.borderColor = color;
          dataset.backgroundColor = hexToRgba(color, 0.15);
        }
      } else {
        if (!dataset.backgroundColor || isDarkColor(dataset.backgroundColor)) {
          dataset.backgroundColor = Array.isArray(data.labels)
            ? PASTEL_COLORS.slice(0, data.labels.length)
            : color;
        }
        if (!dataset.borderColor) {
          dataset.borderColor = 'transparent';
        }
      }
    });

    return data;
  }

  function isDarkColor(color) {
    if (!color) return true;
    if (Array.isArray(color)) color = color[0];
    if (!color || typeof color !== 'string') return true;

    const darkColors = ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40',
                       '#EF4444', '#3B82F6', '#8B5CF6', '#EC4899', '#F59E0B', '#10B981'];
    return darkColors.some(dc => color.toUpperCase().includes(dc.substring(1).toUpperCase()));
  }

  function hexToRgba(hex, alpha) {
    const r = parseInt(hex.slice(1, 3), 16);
    const g = parseInt(hex.slice(3, 5), 16);
    const b = parseInt(hex.slice(5, 7), 16);
    return `rgba(${r}, ${g}, ${b}, ${alpha})`;
  }

  // Render all charts after page load
  document.addEventListener('DOMContentLoaded', function() {
    renderAllCharts();
  });

  function renderAllCharts() {
    const chartPlaceholders = document.querySelectorAll('.chart-placeholder');

    chartPlaceholders.forEach((placeholder, index) => {
      const chartConfig = placeholder.getAttribute('data-chart-config');
      let chartType = placeholder.getAttribute('data-chart-type') || 'bar';

      if (!chartConfig) return;

      try {
        let data = JSON.parse(chartConfig);

        if (chartType === 'area') {
          chartType = 'line';
          if (data.datasets) {
            data.datasets.forEach(dataset => {
              dataset.fill = true;
            });
          }
        }

        data = applyLightColors(data, chartType);

        placeholder.innerHTML = '';
        const canvas = document.createElement('canvas');
        canvas.id = `chart-${index}`;
        placeholder.appendChild(canvas);

        new Chart(canvas, {
          type: chartType,
          data: data,
          options: {
            responsive: true,
            maintainAspectRatio: true,
            aspectRatio: 2,
            plugins: {
              legend: {
                display: true,
                position: 'top'
              }
            },
            scales: chartType !== 'pie' && chartType !== 'doughnut' ? {
              y: {
                beginAtZero: true
              }
            } : {}
          }
        });

        console.log(`Chart ${index} rendered successfully`);
      } catch (error) {
        console.error(`Error rendering chart ${index}:`, error);
        placeholder.innerHTML = `<div class="ai-chart-error">Error rendering chart: ${error.message}</div>`;
      }
    });
  }
</script>

