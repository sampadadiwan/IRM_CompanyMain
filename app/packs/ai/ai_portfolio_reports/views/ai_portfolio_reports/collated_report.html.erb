<div class="ai-collated-container">
  <div class="ai-collated-header">
    <div class="ai-collated-title-section">
      <h1 class="ai-collated-title">
        <%= @report.portfolio_company&.name || "Company Report" %>
        <span class="ai-collated-subtitle">- Final Report Review</span>
      </h1>
      <p class="ai-collated-hint">Edit the report directly. Changes are saved automatically.</p>
    </div>
    <div class="ai-collated-actions">
      <span class="ai-save-status" id="save-status"></span>

      <button class="ai-btn ai-btn-primary" onclick="saveCollatedReport()">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
