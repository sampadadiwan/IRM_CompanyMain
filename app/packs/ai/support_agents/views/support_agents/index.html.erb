<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Support Agents</h1>
  <div class="dropdown">
    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="newSupportAgentDropdown" data-bs-toggle="dropdown" aria-expanded="false">
      New Support Agent
    </button>
    <ul class="dropdown-menu" aria-labelledby="newSupportAgentDropdown">
      <% FormType.where(entity_id: current_user.entity_id, name: "SupportAgent").each do |form_type| %>
        <li><%= link_to form_type.tag, new_support_agent_path(support_agent: { form_type_id: form_type.id, agent_type: form_type.tag }), class: "dropdown-item" %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="table-responsive" data-controller="datatable">
  <table id="support_agents" class="table table-bordered dataTable">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Description
        </th>
        <th>
          Agent Type
        </th>
        <th>
          Enabled
        </th>
        <th>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @support_agents.each do |support_agent| %>
        <%= render support_agent %>
      <% end %>
    </tbody>
  </table>
</div>