<div class="container-fluid p-3">
  <%= render ToggleCard.new(title: "Support Agent: #{support_agent_report.support_agent.name}", css_class: "show_support_agent_report") do %>

  <div class="row">
    <!-- Left Column: Main Info -->
    <div class="col-lg-8">



      <% if support_agent_report.json_fields.present? %>
        <% json_data = support_agent_report.json_fields.with_indifferent_access %>
        <!-- Report Details / Issues -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header  border-bottom py-3">
              <h5 class="mb-0 fw-bold "><i class="ti ti-list-details me-2 text-warning"></i>Report Details</h5>

            </div>
            <div class="card-body p-0">
                <div class="bg-light row py-2 px-3 fw-bold border-bottom mx-0">
                    <div class="col-2">Category</div>
                    <div class="col-2">Type</div>
                    <div class="col-6">Message</div>
                    <div class="col-2">Severity</div>
                </div>

                <% json_data.each do |category, issues| %>
                  <% issues.each do |issue| %>
                    <div class="row py-2 px-3 border-bottom mx-0">
                        <div class="col-2"><%= category.to_s.humanize %></div>
                        <div class="col-2"><%= issue["type"]&.humanize %></div>
                        <div class="col-6"><%= issue["message"] %></div>
                        <div class="col-2">
                            <%
                              badge_color = case issue["severity"]&.downcase
                                            when "blocking"
                                              "bg-danger text-white"
                                            when "success"
                                              "bg-success-subtle text-success"
                                            else
                                              "bg-warning-subtle text-warning"
                                            end
                            %>
                            <span class="badge <%= badge_color %>"><%= issue["severity"]&.humanize %></span>
                        </div>
                    </div>
                  <% end %>
                <% end %>
            </div>
        </div>
      <% end %>

    </div>

    <!-- Right Column: Metadata -->
    <div class="col-lg-4">

        <!-- Attributes -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header  border-bottom py-3 px-4">
            <h6 class="mb-0 fw-bold  d-flex align-items-center"><i class="ti ti-info-circle me-2 text-info"></i>Metadata</h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center py-3 px-4">
                    <span class="text-muted">Status</span>
                    <span class="badge <%= support_agent_report.status == "completed" ? "bg-success" : "bg-warning" %>"> <%= support_agent_report.status&.humanize %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center py-3 px-4">
                    <span class="text-muted">Created at</span>
                    <span class="fw-bold "><%= l(support_agent_report.created_at) %></span>
                </li>
                 <li class="list-group-item d-flex justify-content-between align-items-center py-3 px-4">
                    <span class="text-muted">Updated at</span>
                    <span class="fw-bold "><%= l(support_agent_report.updated_at) %></span>
                </li>
            </ul>
        </div>

    </div>

  </div>
  <% end %>
</div>