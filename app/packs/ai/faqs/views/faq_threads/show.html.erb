<%= turbo_stream_from @faq_thread %>

<div class="d-flex flex-column h-100 gpt-layout" data-controller="faq-thread">
  <div class="row flex-grow-1 g-0 h-100">
    <!-- Sidebar -->
    <div class="col-md-2 d-none d-md-flex flex-column gpt-sidebar p-2">
      <%= button_to faq_threads_path, class: "btn btn-outline-primary w-100 mb-3 text-start d-flex align-items-center gap-2 new-chat-btn" do %>
        <i class="fas fa-plus"></i> New Chat
      <% end %>

      <div class="flex-grow-1 overflow-auto">
        <div class="list-group list-group-flush gpt-history-list">
          <% @faq_threads.each do |thread| %>
            <%= link_to faq_thread_path(thread),
                class: "list-group-item list-group-item-action border-0 rounded-2 mb-1 #{'active' if thread == @faq_thread}" do %>
              <div class="d-flex align-items-center gap-2 text-truncate">
                <i class="far fa-message"></i>
                <span class="small">
                    <%= thread.title %>
                    <br>
                    <span class="text-muted"><%= l(thread.created_at.to_date) %></span>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Main Chat Area -->
    <div class="col-md-10 d-flex flex-column gpt-main position-relative">

      <!-- Messages Container -->
      <div id="faq_thread_messages"
           class="flex-grow-1 overflow-auto pb-9"
           data-faq-thread-target="messages">
        <div class="d-flex flex-column w-100">
          <% @faq_thread.messages&.each do |msg| %>
            <%= render "faq_threads/message", role: msg["role"] || msg[:role], content: msg["content"] || msg[:content] %>
          <% end %>
        </div>

        <!-- Loading Indicator -->
        <div data-faq-thread-target="typing" class="d-none w-100 py-4 border-bottom border-black/10 bg-gray-50" style="background-color: var(--gpt-bot-msg-bg);">
          <div class="gpt-message-container">
             <div class="d-flex gap-3">
               <div class="gpt-avatar bot flex-shrink-0">
                  <div class="rounded-sm bg-success d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px;">
                    <i class="fas fa-robot" style="font-size: 14px;"></i>
                  </div>
               </div>
               <div class="gpt-content d-flex align-items-center">
                  <div class="typing-indicator">
                    <span></span><span></span><span></span>
                  </div>
               </div>
             </div>
          </div>
        </div>
      </div>

      <!-- Input Area -->
      <div class="gpt-input-container">
        <div class="gpt-input-wrapper">
          <%= form_with url: create_message_faq_thread_path(@faq_thread),
                        method: :post,
                        data: { action: "turbo:submit-end->faq-thread#resetForm" },
                        class: "w-100" do |f| %>
            <div class="position-relative d-flex align-items-end p-2 bg-white rounded-3 shadow-sm border border-black/10 input-box-style">
              <%= f.text_area :message,
                  rows: 1,
                  placeholder: "Send a message...",
                  class: "form-control border-0 shadow-none bg-transparent m-0 p-2",
                  style: "resize: none; max-height: 200px; min-height: 24px; overflow-y: hidden; color: var(--gpt-text-color);",
                  data: { faq_thread_target: "input", action: "keydown.enter->faq-thread#submitOnEnter input->faq-thread#autoResize" } %>

              <%= button_tag type: "submit", class: "btn btn-link text-secondary p-2 ms-2", style: "text-decoration: none;" do %>
                <i class="fas fa-paper-plane"></i>
              <% end %>
            </div>
            <div class="text-center mt-2">
              <small class="text-muted" style="font-size: 12px;">AI may produce inaccurate information about people, places, or facts.</small>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
