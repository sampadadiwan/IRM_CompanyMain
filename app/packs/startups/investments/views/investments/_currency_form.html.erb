<%= form_with(model: nil, method: :get, action: "", id: "currency_units_form") do |form| %>

  <div class="form-group" data-controller="currency">
    <% selected ||= params[:units].presence || (cookies && cookies[:currency_units]) %>
    <%= form.select :units, ["Crores", "Lakhs", "Million", "None"], {selected: selected, include_blank: "Select Currency Units"},
        { id: "currency_units", class: "form-control",
        data: { action: "change->currency#setCurrencyUnit", toggle: "tooltip", title: "Choose Currency Units" } } %>
  </div>

  <%= form.submit "Submit", {hidden: true, id: "submit"}%>

<% end %>