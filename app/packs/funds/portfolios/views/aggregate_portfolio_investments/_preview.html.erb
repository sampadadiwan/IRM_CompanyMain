<%= render "/aggregate_portfolio_investments/preview_header", aggregate_portfolio_investment: aggregate_portfolio_investment %>

<div class="associated_entity">
    <section class="hero-section position-relative overflow-hidden mb-0 mb-lg-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <%= render "/aggregate_portfolio_investments/card_table2", aggregate_portfolio_investment: aggregate_portfolio_investment %>
            </div>
        </div>
    </div>
    </section>
</div>

<%= render "/ci_track_records/preview_track_record", owner: aggregate_portfolio_investment %>
<%= render "/ci_widgets/preview_widgets2", owner: aggregate_portfolio_investment %>

<div class="row">
    <% aggregate_portfolio_investment.documents.each do |doc| %>
        <% if doc.tag_list&.split(",").map(&:strip).include?("preview") %>
            <div class="col"><%= render "/aggregate_portfolio_investments/preview_document", document: doc %></div>
        <% end %>
    <% end %>
</div>
