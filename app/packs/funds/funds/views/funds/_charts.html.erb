<% if Investment.where(entity_id: entity.id).count > 0 %>

<div class="row">
    <div class="col-lg-6 mb-4">

        <!-- Illustrations -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Shareholding - Fully Diluted</h6>
            </div>
            <div class="card-body">
                <%= investment_diluted(entity)  %>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-4">
        <!-- Approach -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Investment By Instruments</h6>
            </div>
            <div class="card-body">
                <%= investment_by_intrument(entity)  %>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <!-- Approach -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Investment by Investors</h6>
            </div>
            <div class="card-body">
                <%= investment_by_investor(entity)  %>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <!-- Approach -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Investor count</h6>
            </div>
            <div class="card-body">
                <%= count_by_investor(entity)  %>
            </div>
        </div>
    </div>

</div>

<% end %>