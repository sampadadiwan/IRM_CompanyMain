
  <section id="documents" class="py-5 bg-light border-top">
        <div class="container-md" style="max-width: 900px;">
             <div class="d-flex align-items-center justify-content-between mb-5">
                <h2 class="h2 fw-semibold text-dark">Due Diligence</h2>
                <button class="btn btn-white border bg-white btn-sm fw-medium text-secondary hover-dark">Download All</button>
            </div>

            <div class="vstack gap-3">
              <% colors = ['bg-danger-subtle', 'bg-primary-subtle', 'bg-warning-subtle', 'bg-success-subtle', 'bg-info-subtle'] %>
              <% owner.document_folder.documents.each do |doc| %>
                <% color = colors.sample %>
                <div class="bg-white p-3 rounded-4 border d-flex align-items-center justify-content-between card-hover cursor-pointer">
                    <div class="d-flex align-items-center gap-3">
                        <div class="<%= color %> rounded p-2 text-<%= color.split('-').second %> d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i data-lucide="file-text" style="width: 20px; height: 20px;"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-dark small fw-medium"><%= doc.name %></h6>
                            <p class="mb-0 text-muted" style="font-size: 0.75rem;"><%= doc.uploaded_file_extension %></p>
                        </div>
                    </div>
                    <a class="d-flex align-items-center gap-3 text-decoration-none link-underline-none" href="<%= doc.file_url %>">
                        <span class="badge <%= color%> text-<%= color.split('-').second %> fw-medium">Verified</span>
                        <i data-lucide="download" class="text-muted" style="width: 16px; height: 16px;"></i>
                    </a>
                </div>
              <% end %>

            </div>
        </div>
    </section>