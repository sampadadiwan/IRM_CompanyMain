<div class="col-lg-12">
  <div class="card w-100">
    <div class="card-body">
      <div class="mb-9">

        <div class="mb-3 mb-sm-0">
          <div class="row">
            <%#= image_tag expression_of_interest.investment_opportunity.logo.url(expires_in: 60*60*24*7), class: "ci-logo" if expression_of_interest.investment_opportunity.logo %>
            <div class="col">
              <h4 class="card-title fw-semibold">
                <%= link_to expression_of_interest.investment_opportunity.name, expression_of_interest %>
              </h4>
              <span class="fs3 mb-1">
                <%= expression_of_interest.user.full_name if expression_of_interest.user %>
              </span>
            </div>
          </div>

          <div class="row mt-3 mb-3">
            <div class="col">
              <%#= render "/expression_of_interests/expression_steps", expression_of_interest:, progressbar: true %>
            </div>
          </div>

          <div class="row align-items-center">
            <div class="col-md-4">
              <div class="hstack mb-4 pb-1">
                <div class="p-8 bg-primary-subtle rounded-1 me-3 d-flex align-items-center justify-content-center">
                  <i class="ti ti-user text-primary fs-6"></i>
                </div>
                <div class="text-wrap">
                  <h4 class="mb-0 fs-6"><%= expression_of_interest.user.full_name %></h4>
                  <p class="fs-3 mb-0">Name</p>
                </div>
              </div>

              <div class="hstack mb-4 pb-1">
                <div class="p-8 bg-primary-subtle rounded-1 me-3 d-flex align-items-center justify-content-center">
                  <i class="ti ti-mail text-primary fs-6"></i>
                </div>
                <div class="text-wrap">
                  <h4 class="mb-0 fs-6"><%= expression_of_interest.user.email %></h4>
                  <p class="fs-3 mb-0">Email</p>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="hstack mb-4 pb-1">
                <div class="p-8 bg-primary-subtle rounded-1 me-3 d-flex align-items-center justify-content-center">
                  <i class="ti ti-currency-dollar text-primary fs-6"></i>
                </div>
                <div class="text-wrap">
                  <h4 class="mb-0 fs-6"><%= money_to_currency(expression_of_interest.amount, params) %></h4>
                  <p class="fs-3 mb-0">Expression Amount</p>
                </div>
              </div>

              <div class="hstack mb-4 pb-1">
                <div class="p-8 bg-primary-subtle rounded-1 me-3 d-flex align-items-center justify-content-center">
                  <i class="ti ti-calendar text-primary fs-6"></i>
                </div>
                <div class="text-wrap">
                  <h4 class="mb-0 fs-6"><%= expression_of_interest.created_at.strftime("%d %b %Y") %></h4>
                  <p class="fs-3 mb-0">Date of Expression</p>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="hstack mb-4 pb-1">
                <div class="p-8 bg-primary-subtle rounded-1 me-3 d-flex align-items-center justify-content-center">
                  <i class="ti ti-status-change text-primary fs-6"></i>
                </div>
                <div class="text-wrap">
                  <h4 class="mb-0 fs-6"><%= expression_of_interest.approved ? "Approved" : "UnApproved" %></h4>
                  <p class="fs-3 mb-0">Status</p>
                </div>
              </div>

              <div class="hstack mb-4 pb-1">
                <div class="p-8 bg-primary-subtle rounded-1 me-3 d-flex align-items-center justify-content-center">
                  <i class="ti ti-clock text-primary fs-6"></i>
                </div>
                <div class="text-wrap">
                  <h4 class="mb-0 fs-6"><%= time_ago_in_words(expression_of_interest.updated_at).capitalize %></h4>
                  <p class="fs-3 mb-0">Last Updated</p>
                </div>
              </div>
            </div>
          </div>

          <div class="row align-items-center">
            <div class="col">
              <%= link_to t_common(:show), expression_of_interest_path(expression_of_interest), {class: "btn btn-outline-primary ti ti-eye"} %>
              <% if policy(expression_of_interest).update? %>
                <%= link_to t_common(:edit), edit_expression_of_interest_path(expression_of_interest), {class: "btn btn-outline-primary ti ti-edit"} %>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<% params[:force_units] = nil %>