
<table class="table table-bordered dataTable">
  <tr>
    <td>
      Belongs To
    </td>
    <td>
      <%= link_to @ci_widget.owner %>
    </td>
  </tr>
  <tr>
    <td>
      Entity
    </td>
    <td>
      <%= @ci_widget.entity.name %>
    </td>
  </tr>
  <tr>
    <td>
      Title
    </td>
    <td>
      <%= @ci_widget.title %>
    </td>
  </tr>

  <tr>
    <td>
      Upload
    </td>
    <td>
      <% if @ci_widget.image&.mime_type&.include?('video') %>
        <%= render "layouts/video", url: @ci_widget.image_url %>
      <% elsif @ci_widget.image&.mime_type&.include?('image') %>
        <%= image_tag(@ci_widget.image_url) if @ci_widget.image %>
      <% else %>
        <%= @ci_widget.image_url %>
      <% end %>
    </td>
  </tr>


  <tr>
    <td>
      Image Placement
    </td>
    <td>
      <%= @ci_widget.image_placement %>
    </td>
  </tr>

  <tr>
    <td>
      Intro Text
    </td>
    <td>
      <%= @ci_widget.details_top&.html_safe %>
    </td>
  </tr>
  <tr>
    <td>
      Details
    </td>
    <td>
      <%= @ci_widget.details&.html_safe %>
    </td>
  </tr>
  <tr>
    <td>
      Url
    </td>
    <td>
      <%= @ci_widget.url %>
    </td>
  </tr>

  <tr>
    <td>
      Embed Script
    </td>
    <td>
      <%= @ci_widget.embed_script&.html_safe %>
    </td>
  </tr>
</table>
<div>
  <%= link_to  t_common(:edit), edit_ci_widget_path(@ci_widget), {class: "btn btn-outline-primary"} %>
  <%= button_to t_common(:delete), @ci_widget, method: :delete, class: "btn btn-outline-danger", form_class: "deleteButton", data: {action: "click->confirm#popup", turbo:false}  %>
</div>
