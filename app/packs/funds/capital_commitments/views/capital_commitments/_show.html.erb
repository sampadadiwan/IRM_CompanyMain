<% toggle_state = params[:toggle_state] || "closed" %>

<%= render ToggleCard.new(title: "#{capital_commitment.investor_name} : #{capital_commitment.fund.name}", css_class: "show_remittances_#{capital_commitment.id}") do %>




  <div class="row">
    <!-- Left Column: Main Info -->
    <div class="col-lg-8">

      <!-- Commitment Details -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header  border-bottom py-3">
          <h5 class="mb-0 fw-bold "><i class="ti ti-file-certificate me-2 text-primary"></i>Commitment: <%= capital_commitment.investor_name %></h5>
        </div>
        <div class="card-body">
          <div class="row g-4">
            <div class="col-md-6">
              <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Entity</label>
              <div class="fs-4 fw-medium "><%= capital_commitment.entity.name %></div>
            </div>

            <div class="col-md-6">
              <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Fund</label>
              <div class="fs-4"><%= link_to capital_commitment.fund.name, capital_commitment.fund, class: "text-decoration-none fw-bold text-primary" %></div>
            </div>

            <% if capital_commitment.feeder_fund.present? %>
              <div class="col-md-6">
                <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Feeder Fund</label>
                <div class="fs-4"><%= link_to capital_commitment.feeder_fund.name, capital_commitment.feeder_fund, class: "text-decoration-none fw-bold text-primary" %></div>
              </div>
            <% end %>

            <div class="col-md-6">
              <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Stakeholder</label>
              <div class="fs-4"><%= link_to capital_commitment.investor_name, investor_path(id: capital_commitment.investor_id), class: "text-decoration-none fw-bold text-primary" %></div>
            </div>

            <% if capital_commitment.commitment_date %>
              <div class="col-md-6">
                <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Date</label>
                <div class="fs-4 fw-medium "><%= l capital_commitment.commitment_date %></div>
              </div>
            <% end %>

            <div class="col-md-6">
              <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Folio Id</label>
              <div class="fs-4 fw-medium "><%= capital_commitment.folio_id %></div>
            </div>

            <% if capital_commitment.virtual_bank_account.present? %>
              <div class="col-md-6">
                <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Virtual Bank Account</label>
                <div class="fs-4 fw-medium "><%= capital_commitment.virtual_bank_account %></div>
              </div>
            <% end %>

            <div class="col-md-6">
              <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Fund Close</label>
              <div class="fs-4 fw-medium "><%= capital_commitment.fund_close %></div>
            </div>

            <div class="col-md-6">
              <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Linked KYC</label>
              <div class="fs-4">
                <% if capital_commitment.investor_kyc %>
                  <%= link_to capital_commitment.investor_kyc.full_name, capital_commitment.investor_kyc, class: "text-decoration-none text-primary" %>
                <% else %>
                  <span class="badge bg-danger">No KYC</span>
                <% end %>
              </div>
            </div>

            <% if capital_commitment.fund.unit_types.present? %>
              <div class="col-md-6">
                <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Unit Type</label>
                <div class="fs-4 fw-medium "><%= capital_commitment.unit_type %></div>
              </div>
              <div class="col-md-6">
                <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Total Units</label>
                <div class="fs-4 fw-medium "><%= capital_commitment.total_fund_units_quantity %></div>
              </div>
            <% end %>

            <div class="col-12">
              <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Investor Signatory Emails</label>
              <div class="fs-4 fw-medium "><%= capital_commitment.esign_emails %></div>
            </div>

            <% if capital_commitment.notes.present? %>
              <div class="col-12">
                <label class="text-muted text-uppercase fw-bold fs-1 mb-1">Notes</label>
                <div class="fs-4 fw-medium "><%= capital_commitment.notes.html_safe %></div>
              </div>
            <% end %>

          </div>
        </div>
      </div>

       <!-- Other Details Card -->
       <div class="card shadow-sm border-0 mb-4">
        <div class="card-header  border-bottom py-3">
          <h5 class="mb-0 fw-bold "><i class="ti ti-settings me-2 text-warning"></i>Other Details</h5>
        </div>
        <div class="card-body">
             <% if current_user %>
               <table class="table table-borderless mb-0">
                <%= display_custom_fields(capital_commitment) %>
               </table>
            <% end %>
        </div>
      </div>

    </div>

    <!-- Right Column: Financials & Status -->
    <div class="col-lg-4">

        <!-- Attributes -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header  border-bottom py-3">
            <h6 class="mb-0 fw-bold  d-flex align-items-center"><i class="ti ti-list me-2 text-warning"></i>Attributes</h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                    <span class="text-muted">Onboarding Complete</span>
                    <span class="fw-bold "><%= display_boolean capital_commitment.onboarding_completed %></span>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                    <span class="text-muted">KYC Verified</span>
                    <span class="fw-bold ">
                      <% if capital_commitment&.investor_kyc&.verified %>
                        <span class="badge bg-success ms-2">Verified</span>
                      <% else %>
                        <span class="badge bg-warning ms-2">Not Verified</span>
                      <% end %>
                    </span>
                </li>

            </ul>
        </div>

        <!-- Financials -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header  border-bottom py-3">
            <h6 class="mb-0 fw-bold  d-flex align-items-center"><i class="ti ti-chart-pie me-2 text-success"></i>Financials</h6>
            </div>
            <ul class="list-group list-group-flush">
                <% if capital_commitment.adjustment_amount_cents > 0 || capital_commitment.foreign_currency? %>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Folio Currency</span>
                        <span class="fw-bold "><%= capital_commitment.folio_currency %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Folio Committed Amount</span>
                        <span class="fw-bold "><%= money_to_currency capital_commitment.folio_committed_amount, params %></span>
                    </li>

                    <% if capital_commitment.adjustment_amount_cents != 0 %>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <span class="text-muted">Original Folio Committed</span>
                            <span class="fw-bold "><%= money_to_currency capital_commitment.orig_folio_committed_amount, params %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <span class="text-muted">Adjustment Folio Amount</span>
                            <span class="fw-bold "><%= money_to_currency capital_commitment.adjustment_folio_amount, params %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <span class="text-muted">Adjustment Amount</span>
                            <span class="fw-bold "><%= money_to_currency capital_commitment.adjustment_amount, params %></span>
                        </li>
                    <% end %>
                <% end %>

                <li class="list-group-item py-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <span class="text-muted">Committed Amount</span>
                        <span class="fw-bold "><%= money_to_currency capital_commitment.committed_amount, params %></span>
                    </div>
                     <% if capital_commitment.foreign_currency? %>
                        <small class="text-muted d-block text-end">
                            Adjustments + Original: <%= money_to_currency(capital_commitment.adjustment_amount, params) %> + <%= money_to_currency(capital_commitment.orig_committed_amount, params) %>
                        </small>
                    <% end %>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                    <span class="text-muted">Called Amount</span>
                    <span class="fw-bold "><%= money_to_currency capital_commitment.call_amount, params %></span>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                    <span class="text-muted">Collected Amount</span>
                    <span class="fw-bold "><%= money_to_currency capital_commitment.collected_amount, params %></span>
                </li>

                <li class="list-group-item py-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Called - Collected</span>
                        <span class="fw-bold  <%= capital_commitment.pending_call_amount != 0 ? 'text-danger': '' %>"><%= money_to_currency capital_commitment.pending_call_amount, params %></span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width: <%= capital_commitment.percentage_pending_call %>%" aria-valuenow="<%=capital_commitment.percentage_pending_call%>" aria-valuemin="0" aria-valuemax="100">
                           <%= capital_commitment.percentage_pending_call %> % Paid
                        </div>
                    </div>
                </li>

                <li class="list-group-item py-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Committed - Collected</span>
                        <span class="fw-bold "><%= money_to_currency capital_commitment.pending_committed_amount, params %></span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width: <%= capital_commitment.percentage_pending_committed %>%" aria-valuenow="<%=capital_commitment.percentage_pending_committed%>" aria-valuemin="0" aria-valuemax="100">
                            <%= capital_commitment.percentage_pending_committed %> % Collected
                        </div>
                    </div>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                    <span class="text-muted">Distributed Amount</span>
                    <span class="fw-bold "><%= money_to_currency capital_commitment.distribution_amount, params %></span>
                </li>

                <% if capital_commitment.fund.has_tracking_currency? %>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Tracking Currency</span>
                        <span class="fw-bold "><%= capital_commitment.fund.tracking_currency %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Tracking Committed Amount</span>
                        <span class="fw-bold "><%= money_to_currency capital_commitment.tracking_committed_amount, params %></span>
                    </li>
                <% end %>

                <% if capital_commitment.entity.permissions.enable_account_entries? %>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Total Allocated Expense</span>
                        <span class="fw-bold "><%= money_to_currency capital_commitment.total_allocated_expense, params %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Total Allocated Income</span>
                        <span class="fw-bold "><%= money_to_currency capital_commitment.total_allocated_income, params %></span>
                    </li>
                <% end %>
            </ul>
        </div>

        <% if params[:debug].present? %>
            <%
                end_date = params[:end_date].present? ? Date.local_parse(params[:end_date]) : Time.zone.today
                cc_calcs = CapitalCommitmentCalcs.new(capital_commitment, end_date)
            %>
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header  border-bottom py-3">
                <h6 class="mb-0 fw-bold  d-flex align-items-center"><i class="ti ti-bug me-2 text-danger"></i>Debug Info</h6>
                </div>
                 <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Cash In Hand</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.cash_in_hand_cents, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Net Current Assets</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.net_current_assets_cents, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Estimated Carry</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.estimated_carry_cents, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Collected</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.collected_cents, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">DPI</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.dpi, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">RVPI</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.rvpi, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">TVPI</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.tvpi, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">FMV</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.fmv_on_date, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Gross XIRR</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.xirr, capital_commitment.fund.currency, params  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <span class="text-muted">Net XIRR</span>
                        <span class="fw-bold "><%= currency_from_cents cc_calcs.xirr(net_irr: true), capital_commitment.fund.currency, params  %></span>
                    </li>
                 </ul>
            </div>
        <% end %>
    </div>

  </div>

<% end %>