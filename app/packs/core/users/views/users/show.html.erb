<%= render "/layouts/alerts" %>

  <div class="card shadow mb-4">

    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">
        <%= link_to @user.name, @user %>
      </h6>
    </div>

    <div class="card-body">

      <table id="users" class="table table-bordered dataTable ">

        <tr>
          <td>
            First name
          </td>
          <td>
            <%=@user.first_name%>
          </td>
        </tr>
        <tr>
          <td>
            Last name
          </td>
          <td>
            <%=@user.last_name%>
          </td>
        </tr>
        <tr>
          <td>
            Email
          </td>
          <td>
            <%=@user.email%>
          </td>
        </tr>
        <tr>
          <td>
            Phone
          </td>
          <td>
            <%=@user.phone%>
          </td>
        </tr>

        <tr>
          <td>
            Signature
          </td>
          <td>
            <%= image_tag @user.signature_url, 
              style: "margin:0px; padding:0px; max-width:200px; max-height:200px;" if @user.signature.present? %>
          </td>
        </tr>

        <tr>
          <td>
            Department
          </td>
          <td>
            <%=@user.dept %>
          </td>
        </tr>

        <% if Entity::SECONDARY_BUYERS.include? @user.entity&.entity_type %>
          <tr>
            <td>
              Secondary Sale Notifications
            </td>
            <td>
              <%= @user.sale_notification ? "Yes" : "No" %>
            </td>
          </tr>
        <% end %>

        <tr>
          <td>
            Whatsapp Enabled
          </td>
          <td>
            <%= @user.whatsapp_enabled ? "Yes" : "No" %>

            <% if @user.whatsapp_enabled && @user.id==current_user.id %>
        <div class="enable_whatsapp">
          <div class="click_btn">
            Click to receive <a class="btn btn-success"
              href="https://signupforservices.com/whatsapp/optin/?bId=2c729a2b-a232-49bf-b229-4e2b73a8f1a2&bName=AltConnects&s=URL&lang=en_US">
              Whatsapp Updates
            </a>
          </div>
          <div class="qr_code">
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Additional Steps: To get WhatsApp updates.
                  </h6>
                </div>
                <div class="card-body">
                  <img src="/img/whatsappQR.png" />                  
                </div>
                <div class="card-header py-3">            
                  <smallclass="text-muted" >
                    Open a QR code scanner, scan this QR code, accept the terms, and hit send in whatsapp.
                    This will enable us to send you critical alters only, on whatsapp.
                  </small>
                </div>
                
              </div>
          </div>
        </div>
      <% end %>

          </td>
        </tr>


        <tr>
          <td>
            Entity
          </td>
          <td>
            <%=@user.entity.name if @user.entity_id %>
          </td>
        </tr>

        <tr>
          <td>
            Roles
          </td>
          <td>
            <%=@user.roles.collect(&:name) %>
          </td>
        </tr>

      </table>

      <div>
        <%= link_to "Edit" , edit_user_path(@user), {class: "btn btn-primary" } if policy(@user).update? %>
      </div>

      
    </div>
  </div>