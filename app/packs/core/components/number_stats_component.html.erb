<!-- app/components/fund_card_component/fund_card_component.html.erb -->
<div class="<%=@css_class%> col-sm col-md">
  <% if @path %>
    <a href="<%= @path %>">
  <% end %>
    <div class="card">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div>
            <% if @raw_amount %>
              <div data-controller="counters"
                   data-counters-value-value="<%= @raw_amount %>"
                   data-counters-formatted-value-value="<%= @amount %>">
                <h3 class="fs-<%=@fs_size%>" data-counters-target="output">0</h3>
              </div>
            <% else %>
              <h3 class="fs-<%=@fs_size%>"><%= @amount %></h3>
            <% end %>
            <h6 class="card-subtitle mb-1 text-muted"><%= @subtitle %></h6>
          </div>
          <% if @text_info.present? %>
            <div class="ms-auto">
              <span class="text-<%= @progress_bar_color %> display-6"><i class="ti ti-<%= @text_info %>"></i></span>
            </div>
          <% end %>
        </div>
        <div class="progress-bar text-bg-<%= @progress_bar_color %>" role="progressbar" style="width: 100%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>
  <% if @path %>
    </a>
  <% end %>
</div>
