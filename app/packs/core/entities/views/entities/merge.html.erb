<%= render NewCard.new do %>
  <%= render FormCard.new(title: "Merge") do %>

    <div class="alert alert-info">
      This will move all associated data from the 'Defunct Entity' selected above to the 'Merge into Entity' below. This action cannot be reversed and is permanent
    </div>
    <%= form_for(:merge, url: merge_entities_path, method: :post) do |form| %>

      <div class="form-group">
        <%= form.label :old_entity_id, "Defunct Entity" %>
        <%= form.text_field :old_entity_id, class: "form-control", name: :old_entity_id    %>
      </div>

      <div class="form-group">
        <%= form.label :new_entity_id, "Merge into Entity" %>
        <%= form.text_field :new_entity_id, class: "form-control", name: :new_entity_id  %>
      </div>

      <div class="form-group">
        <%= form.submit t_common(:save), {class: "btn btn-outline-primary" }%>
      </div>

    <% end %>
    
  <% end %>

<% end %>