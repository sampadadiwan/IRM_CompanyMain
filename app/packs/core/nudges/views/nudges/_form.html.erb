<%= form_with(model: nudge, validate: true) do |form| %>
  <% if nudge.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(nudge.errors.count, "error") %> prohibited this nudge from being saved:</h2>

      <ul>
        <% nudge.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :to %>
    <%= form.text_field :to, class: "form-control"  %>
    <%= form.text_field :back_to, class: "form-control", hidden: true, name: "back_to", value: params[:back_to]  %>
    <%= form.text_field :item_id, class: "form-control", hidden: true  %>
    <%= form.text_field :item_type, class: "form-control", hidden: true  %>
  </div>

  <div class="form-group">
    <%= form.label :cc %>
    <%= form.text_field :cc, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :bcc %>
    <%= form.text_field :bcc, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :msg_body %>
    <%= form.rich_text_area :msg_body, class: "form-control large_rich_text_area"  %>
  </div>

  <div class="form-group">
    <%= form.submit t_common(:save), {class: "btn btn-outline-primary"}%>
  </div>
<% end %>
