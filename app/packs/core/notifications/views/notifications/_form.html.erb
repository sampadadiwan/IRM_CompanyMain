<%= form_with(model: notification) do |form| %>
  <% if notification.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

      <ul>
        <% notification.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :recipient_id %>
    <%= form.text_field :recipient_id, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :type %>
    <%= form.text_field :type, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :params %>
    <%= form.text_field :params, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :read_at %>
    <%= form.datetime_field :read_at, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.submit t_common(:save), {class: "btn btn-outline-primary"}%>
  </div>
<% end %>
